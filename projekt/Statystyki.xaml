<Window x:Class="projekt.Statystyki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt"
        mc:Ignorable="d"
        Title="Statystyki" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF471414" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="s_stat" Content="Pokaż statystyki" HorizontalAlignment="Left" Margin="134,227,0,0" VerticalAlignment="Top" Width="123" Click="button_Click"/>
        <DataGrid x:Name="g_stat" HorizontalAlignment="Left" Height="181" Margin="22,28,0,0" VerticalAlignment="Top" Width="248" SelectionChanged="DataGrid_SelectionChanged"/>
    </Grid>
</Window>
